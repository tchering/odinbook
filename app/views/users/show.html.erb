<div class="container-fluid">
  <%= render partial: "shared/user_info", locals: { user: @user } %>
  <div>
    <%= render partial: "posts/form", locals: { post: @post } %>
  </div>
  <div style="max-height: 80vh;">
    <%= turbo_frame_tag "posts_container" do %>
      <div class="posts-container">
        <% if @posts.any? %>
          <div class="posts-list">
            <% @posts.each do |post| %>
              <%= render partial: "posts/post", locals: { post: post } %>
            <% end %>
          </div>
        <% else %>
          <div class="empty-state text-center p-4">
            <i class="fas fa-pen-to-square fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Posts Yet</h4>
            <p class="text-muted">Share your thoughts and start your journey!</p>
            <button class="btn btn-primary mt-2">Create Your First Post</button>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>