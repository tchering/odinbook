<div class="card shadow-lg mb-4">
  <div class="card-body d-flex flex-column align-items-center p-2">
    <div class="mb-2">
      <%= current_user.avatar.attached? ?
                image_tag(current_user.avatar.variant(resize_to_fit: [300, 300]), 
                                     class: "rounded-circle square shadow-sm", style: "width: 150px; height: 150px; object-fit: cover;") :
                image_tag("default_avatar",
                                     class: "rounded-circle shadow-sm", style: "width: 150px; height: 150px; object-fit: cover;") %>
    </div>
    <h5 class="fw-bold mb-2"><%= current_user.name %></h5>
    <div class="d-flex flex-column flex-lg-row gap-2 w-100">
      <%= link_to "#", class: "btn btn-sm btn-light border-primary text-primary" do %>
        <i class="fas fa-user-friends"></i> Friends
      <% end %>
      <%= link_to "#", class: "btn btn-sm btn-light border-info text-info" do %>
        <i class="fas fa-envelope"></i> Message
      <% end %>
      <%= link_to "#", class: "btn btn-sm btn-light border-success text-success" do %>
        <i class="fas fa-network-wired"></i> Mutual
      <% end %>
    </div>
  </div>
</div>
