<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Log in</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="form-group mb-4">
              <%= f.label :email, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
            <div class="form-group mb-4" data-controller="password-visibility">
              <%= f.label :password, class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text" role="button" data-action="click->password-visibility#toggle">
                  <i class="fas fa-eye" data-password-visibility-target="icon"></i>
                </span>
                <%= f.password_field :password, 
                        autocomplete: "current-password", 
                        class: "form-control",
                        data: { 
                          password_visibility_target: "input" 
                        } %>
              </div>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              </div>
            <% end %>
            <div class="d-grid gap-2">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>
          <div class="d-grid gap-2 mt-2">
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-dark d-flex align-items-center justify-content-center gap-2 w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>