<%= turbo_frame_tag dom_id(post) do %>
  <div class="card mb-4 rounded-3">
    <div class="card-body p-3">
      <div class="d-flex align-items-center mb-3">
        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3">
          <i class="bi bi-person"></i>
        </div>
        <div>
          <h6 class="fw-bold mb-0"><%= post.author.name %></h6>
          <small class="text-secondary"><%= time_ago_in_words(post.created_at) %> ago</small>
        </div>
      </div>
      <p class="card-text fs-6 mb-3 text-dark"><%= post.body %></p>
      <div class="d-flex justify-content-end border-top pt-2">
        <% if post.author == current_user %>
          <%= link_to edit_post_path(post), class: "me-2" do %>
            <i class="fas fa-pen"></i>
          <% end %>
          <%= link_to post_path(post), 
            class: "me-2",
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to delete this post?"
            } do %>
            <i class="fas fa-trash-can"></i>
          <% end %>
        <% end %>
        <%= link_to post_comments_path(post), data: { turbo_frame: "comments_#{dom_id(post)}" }, class: "" do %>
          <i class="fas fa-comment"></i>
        <% end %>
      </div>
      <%# !turbo frame for comments %>
      <%= turbo_frame_tag "comments_#{dom_id(post)}" do %>
        <div class="text-center text-muted">
          <small>Click <i class="fas fa-comment"></i> to load comments.</small>
        </div>
      <% end %>
    </div>
  </div>
<% end %>